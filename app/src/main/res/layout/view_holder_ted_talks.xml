<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    card_view:cardElevation="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_ted_talks_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:scaleType="centerCrop"
            android:src="@drawable/ted_talks_img" />

        <TextView
            android:id="@+id/tv_people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_marginTop="250dp"
            android:text="Cameron Russell"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/tv_say_topic"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_people_name"
            android:layout_below="@id/tv_people_name"
            android:text="Looks aren't everything. Believe me, I'm a model."
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_more_vert"
            android:layout_below="@id/iv_more_vert"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="14:05"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_small" />

        <ImageView
            android:id="@+id/iv_more_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/ic_more_vert_write_24dp"

            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

