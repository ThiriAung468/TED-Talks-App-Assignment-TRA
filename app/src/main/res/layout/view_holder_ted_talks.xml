<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_ted_talks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TED Talks"
        android:textSize="@dimen/text_regular_3x"
        android:textColor="#ff0000"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium_2"/>
    <ImageView
        android:id="@+id/iv_news_placeholder"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/img_news_placeholder"
        android:layout_below="@id/tv_ted_talks"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium_2"/>

    <ImageView
        android:id="@+id/iv_placeholder"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/news_placeholder1"
        android:layout_below="@id/iv_news_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium_2"/>

</RelativeLayout>
