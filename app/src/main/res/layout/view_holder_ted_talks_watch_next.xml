<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_ted_talks_watch_next"
        android:layout_width="@dimen/publication_logo_size"
        android:layout_height="90dp"
        android:src="@drawable/watch_next"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_next_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Richard Seymour"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@color/primary_text"
        android:layout_toRightOf="@id/iv_ted_talks_watch_next"
        android:layout_marginTop="@dimen/margin_medium_2"/>
    <TextView
        android:id="@+id/tv_next_say_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How beauty feels"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@color/primary_text"
        android:layout_alignLeft="@id/tv_next_people_name"
        android:layout_below="@id/tv_next_people_name"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/iv_next_more_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_grey_24dp"
        android:layout_toRightOf="@id/tv_next_people_name"
       android:layout_marginLeft="60dp"
        android:layout_marginTop="@dimen/margin_medium_2"
        />
    <TextView
        android:id="@+id/tv_watch_next_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:15"
        android:textColor="@color/white"
        android:background="@color/background_black"
        android:padding="@dimen/margin_small"
        android:layout_alignBottom="@id/iv_ted_talks_watch_next"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="90dp"/>

</RelativeLayout>