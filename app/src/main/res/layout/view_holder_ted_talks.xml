<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    card_view:cardElevation="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_ted_talks_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:scaleType="centerCrop"
            android:src="@drawable/ted_talks_img" />


        <!-- constraint -->
        <TextView
            android:id="@+id/tv_people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cameron Russell"
            android:layout_above="@+id/tv_say_topic"
            android:layout_alignLeft="@+id/tv_say_topic"
            android:layout_marginBottom="@dimen/margin_small_n"
            android:textColor="#FFFFFF"/>



        <!-- constraint -->
        <TextView
            android:id="@+id/tv_say_topic"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Looks aren't everything. Believe me, I'm a model."
            android:textSize="@dimen/text_regular_2x"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/iv_ted_talks_img"

            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium_2"/>



        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_ted_talks_img"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:text="14:05"
            android:textSize="@dimen/text_small"
            android:textColor="#FFFFFF"
            />


        <ImageButton
            android:id="@+id/iv_more_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_write_24dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/tv_time"
            style="?android:attr/actionOverflowButtonStyle"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

